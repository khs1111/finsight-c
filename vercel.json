{
  "version": 2,
  "framework": "create-react-app",
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "ignoreCommand": "git diff --name-only $VERCEL_GIT_PREVIOUS_SHA $VERCEL_GIT_COMMIT_SHA | grep -qE '^(README.md|docs/)' && echo \"docs-only: skip\" && exit 0 || exit 1",
  "env": {
    "PUBLIC_URL": "/"
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    { "src": "/api/news/(.*)", "dest": "https://finsight-server.store/api/$1" },
    {
      "src": "/static/(.*)",
      "headers": {
        "cache-control": "s-maxage=31536000,immutable"
      }
    },
    {
      "src": "/(.*)/static/(.*)",
      "dest": "/static/$2"
    },
    {
      "src": "/(.*)/(favicon\\.ico|logo\\.svg|logo\\.png|logo192\\.png|logo512\\.png|manifest\\.json|robots\\.txt)",
      "dest": "/$2"
    },
  { "src": "/favicon.ico", "dest": "/logo.svg" },
    { "src": "/logo192.png", "dest": "/logo192.png" },
    { "src": "/logo512.png", "dest": "/logo512.png" },
  { "src": "/logo.png", "dest": "/logo.png" },
  { "src": "/logo.svg", "dest": "/logo.svg" },
    { "src": "/manifest.json", "dest": "/manifest.json" },
    { "src": "/robots.txt", "dest": "/robots.txt" },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  }
}

